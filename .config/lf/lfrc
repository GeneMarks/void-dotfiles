# options
set hidden true
set sixel true
set previewer ~/.scripts/lf/pv.sh

# keymaps
map G bottom
map v :toggle
map V :invert

map gm cd /run/media/gene
map gs cd /mnt/syno

map D trash $fs

# commands
cmd trash ${{
    if [ -z "$fx" ]; then
        exit
    fi

    printf "$fx\n"
    printf "trash?[y/n]"
    read ans

    if [ "$ans" != "y" ]; then
        exit
    fi

    echo "$fx" | while IFS= read -r file_path; do
        trash-put "$file_path"
    done
}}
